{
	"name": "foodwise",
	"devDependencies": {
		"@foodwise/tsconfig": "workspace:*",
		"prettier": "^3.2.5",
		"turbo": "^2.5.3",
		"typescript": "^5.8.3"
	},
	"engines": {
		"node": ">=22"
	},
	"packageManager": "bun@1.2.13",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"lint": "turbo lint",
		"typecheck": "turbo typecheck",
		"format": "prettier --write \"**/*.{ts,tsx,md}\""
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}
