{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*", "$NODE_ENV"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},

		"dev": {
			"cache": false,
			"persistent": true,
			"inputs": ["$NODE_ENV", ".env*"]
		}
	}
}
