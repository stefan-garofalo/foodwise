{
  "name": "@foodwise/db",
  "exports": {
    "./client": {
      "types": "./src/client.ts",
      "default": "./dist/client.js"
    },
    "./utils/*": {
      "types": "./src/utils/*.ts",
      "default": "./dist/utils/*.js"
    },
    "./schema": {
      "types": "./src/schema/index.ts",
      "default": "./dist/schema/index.js"
    },
    "./schema/utils/*": {
      "types": "./src/schema/utils/*.ts",
      "default": "./dist/schema/utils/*.js"
    }
  },
  "scripts": {
    "dev": "bun run db:studio",
    "build": "tsc",
    "db:generate": "NODE_OPTIONS='--import tsx' drizzle-kit generate:sqlite",
    "db:migrate": "NODE_OPTIONS='--import tsx' drizzle-kit migrate",
    "db:studio": "NODE_OPTIONS='--import tsx' drizzle-kit studio --host localhost --port 8100 --verbose",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "drizzle-orm": "^0.38.4",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@foodwise/tsconfig": "workspace:*",
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.20.4"
  }
}
