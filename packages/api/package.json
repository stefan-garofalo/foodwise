{
  "name": "@foodwise/api",
  "type": "module",
  "typesVersions": {
    "*": {
      "*": [
        "./src/*"
      ],
      ".": [
        "./src/index.ts"
      ]
    }
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./src/*.ts",
      "default": "./dist/*.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@foodwise/auth": "workspace:*",
    "@foodwise/db": "workspace:*",
    "@trpc/server": "^11.4.4",
    "arktype": "^2.1.20",
    "drizzle-arktype": "^0.1.3",
    "neverthrow": "^8.2.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@foodwise/tsconfig": "workspace:*",
    "@types/node": "^24.3.0",
    "tsup": "latest",
    "typescript": "latest"
  }
}
