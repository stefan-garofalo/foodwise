{
	"name": "@foodwise/api",
	"type": "module",
	"typesVersions": {
		"*": {
			"*": ["./src/*"],
			".": ["./src/index.ts"]
		}
	},
	"exports": {
		".": {
			"types": "./src/index.ts",
			"default": "./dist/index.js"
		},
		"./*": {
			"types": "./src/*.ts",
			"default": "./dist/*.js"
		}
	},
	"scripts": {
		"build": "tsc",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@foodwise/auth": "workspace:*",
		"@foodwise/db": "workspace:*",
		"@trpc/server": "^11.1.0",
		"neverthrow": "^8.2.0",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@foodwise/tsconfig": "workspace:*",
		"typescript": "latest"
	}
}
